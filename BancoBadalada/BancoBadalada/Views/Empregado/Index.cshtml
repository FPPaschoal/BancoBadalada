@model IEnumerable<BancoBadalada.Models.TbEmpregado>
@{
    ViewData["Title"] = "Empregados";
}

<h1>Empregados</h1>
<p>
    <a asp-action="Criar">Novo Empregado</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdEmpregado)</th>
            <th>@Html.DisplayNameFor(model => model.NmEmpregado)</th>
            <th>@Html.DisplayNameFor(model => model.IniciaisEmpregado)</th>
            <th>@Html.DisplayNameFor(model => model.DsCargo)</th>
            <th>@Html.DisplayNameFor(model => model.DtNascimento)</th>
            <th>@Html.DisplayNameFor(model => model.Salario)</th>
            <th>@Html.DisplayNameFor(model => model.Comissao)</th>
            <th>@Html.DisplayNameFor(model => model.FgAtivo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdEmpregado)</td>
                <td>@Html.DisplayFor(modelItem => item.NmEmpregado)</td>
                <td>@Html.DisplayFor(modelItem => item.IniciaisEmpregado)</td>
                <td>@Html.DisplayFor(modelItem => item.DsCargo)</td>
                <td>@item.DtNascimento.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.Salario)</td>
                <td>@Html.DisplayFor(modelItem => item.Comissao)</td>
                <td>@Html.DisplayFor(modelItem => item.FgAtivo)</td>
                <td>
                    <a asp-action="Editar" asp-route-id="">Editar</a> |
                    <a asp-action="Remover" asp-route-id="">Remover</a> |
                    <a asp-action="Remover" asp-route-id="">Matricular</a>
                </td>
            </tr>
        }
    </tbody>
</table>