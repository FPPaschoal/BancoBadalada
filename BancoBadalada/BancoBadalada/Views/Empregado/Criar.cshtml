@model BancoBadalada.Models.TbEmpregado
@{
    ViewData["Title"] = "Criar Empregado";
}

<div>
    <form asp-action="Criar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <input type="hidden" asp-for="IdEmpregado" />
        </div>
        <div class="mb-3">
            <label asp-for="NmEmpregado" class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="NmEmpregado">
        </div>
        <div class="mb-3">
            <label asp-for="IniciaisEmpregado" class="form-label">Iniciais do Empregado</label>
            <input type="text" class="form-control" asp-for="IniciaisEmpregado">
        </div>
        <div class="mb-3">
            <label asp-for="DsCargo" class="form-label">Descrição do cargo</label>
            <input type="text" class="form-control" asp-for="DsCargo">
        </div>
        <div class="mb-3">
            <label asp-for="DtNascimento" class="form-label">Data de nascimento</label>
            <input type="date" class="form-control" asp-for="DtNascimento">
        </div>
        <div class="mb-3">
            <label asp-for="Salario" class="form-label">Salário</label>
            <input type="numeric" min="0" class="form-control" asp-for="Salario">
        </div>
        <div class="mb-3">
            <label asp-for="Comissao" class="form-label">Comissão</label>
            <input type="number" min="0" class="form-control" asp-for="Comissao">
        </div>
        <input type="submit" class="btn btn-primary" value="Criar" />
    </form>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>


