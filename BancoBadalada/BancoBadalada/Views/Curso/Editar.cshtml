@model TbCurso
@{
    ViewData["Title"] = "Editar Curso";
}

<h1>Id (@Model.IdCurso)</h1>
<h2>Categoria (@Model.Categoria)</h2>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="IdCurso" />
            </div>
            <div class="form-group">
                <label asp-for="DsCurso" class="control-label"></label>
                <input asp-for="DsCurso" class="form-control" />
                <span asp-validation-for="DsCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select class="form-select" aria-label="Categoria" asp-for="Categoria">
                    <option value="GEN" selected>General, para cursos introdutórios</option>
                    <option value="DSG">Design, para analise e projeto</option>
                    <option value="BLD">Build, para desenvolvimento de aplicativos</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FgAtivo" class="control-label"></label>
                <select class="form-select" aria-label="FgAtivo" asp-for="FgAtivo">
                    <option value="True" selected>Ativado</option>
                    <option value="False">Desativado</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>