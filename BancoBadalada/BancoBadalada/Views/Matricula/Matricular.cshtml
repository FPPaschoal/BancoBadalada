@model IEnumerable<BancoBadalada.Models.TbEmpregado>
@{
    ViewData["Title"] = "Matricular";
}

<h1>Matricular Aluno</h1>
<form asp-action="Matricular">
    <div class="mb-3">
        <select class="form-select" aria-label="ID do Aluno">
            <option value="" selected>NULL</option>
            @foreach (var p in Model)
            {
                <option asp-for="@p.IdEmpregado" value="@p.IdEmpregado">@p.IdEmpregado | @p.NmEmpregado</option>
            }
        </select>
        <input type="submit" class="btn btn-primary" value="Matricular" asp-route-idParticipante="IdEmpregado" asp-route-idCurso="@ViewBag.idCurso" asp-route-dtInicio="@ViewBag.dtInicio" />
        <input type="hidden" asp-for="@ViewBag.dtInicio"/>
        <a class="btn btn-secondary" asp-asp-controller="CursosOferecidos" asp-action="Index">Voltar</a>
    </div>
</form>
