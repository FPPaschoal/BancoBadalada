@model TbMatricula
@{
    ViewData["Title"] = "Matricular";
    var empregados = ViewBag.Empregados;
}

<h1>Matricular Aluno</h1>
<form asp-action="Matricular" asp->
    <div class="mb-3">
        <select class="form-select" aria-label="ID do Aluno" asp-for="IdParticipante">
            <option value="" selected>NULL</option>
            @foreach (var p in empregados)
            {
                <option  value="@p.IdEmpregado">@p.IdEmpregado | @p.NmEmpregado</option>
            }
        </select>
        <br />
        <input type="hidden" asp-for="IdCurso" value="@Model.IdCurso" />
        <input type="hidden" asp-for="DtInicio" value="@Model.DtInicio" />
        <input type="submit" class="btn btn-primary" value="Matricular" />
       
        <a class="btn btn-secondary" asp-controller="CursosOferecidos" asp-action="Index">Voltar</a>
    </div>
</form>
