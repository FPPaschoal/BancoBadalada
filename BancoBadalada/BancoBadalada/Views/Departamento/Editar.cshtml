@model TbDepartamento
@{
    ViewData["Title"] = "Editar Departamento";
}
<h1>Id (@Model.IdDepartamento)</h1>
<h2>Nome do Departamento (@Model.NmDepartamento)</h2>

<h4>Editar</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="IdDepartamento" />
            </div>
            <div class="form-group">
                <label asp-for="IdGerente" class="control-label"></label>
                <input asp-for="IdGerente" class="form-control" />
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FgAtivo" class="control-label"></label>
                <select class="form-select" aria-label="FgAtivo" asp-for="FgAtivo">
                    <option value="True" selected>Ativado</option>
                    <option value="False">Desativado</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NmDepartamento" class="control-label"></label>
                <input asp-for="NmDepartamento" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>
