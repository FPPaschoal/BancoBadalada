@model TbCursosOferecidos

@{
    ViewData["Title"] = "Editar curso oferecido";
}

<h1>Id (@Model.IdCurso)</h1>
<h2>Instrutor (@Model.IdInstrutor)</h2>

<h4>Editar</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" asp-route-dtVelha="@Model.DtInicio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="IdCurso"/>
            </div>
            <div class="form-group">
                <label asp-for="DtInicio" class="control-label"></label>
                <input asp-for="DtInicio" type="date" class="form-control" />
                <span asp-validation-for="DtInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FgAtivo" class="control-label"></label>
                <select class="form-select" aria-label="FgAtivo" asp-for="FgAtivo">
                    <option value="True" selected>Ativado</option>
                    <option value="False">Desativado</option>
                </select>
            </div>
            <div class="form-group">
                <p>Id do Instrutor</p>
                <select class="form-select" aria-label="ID do Instrutor" asp-for="IdInstrutor">
                    <option value="" selected>NULL</option>
                    @foreach (var p in ViewBag.empregados)
                    {
                        <option value="@p.IdEmpregado">@p.IdEmpregado | @p.NmEmpregado</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control"/>
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-danger" asp-action="Index">Voltar</a>
</div>